<div class="hero carousel lunch-carousel">
  <div class="carousel-item lunch-carousel-0"></div>
</div>
{{> reserve-table }}
<div class="main-content">
  <div class="two-column reverse">
    <div class="left">
      <div class="lunch-info pricelist">
        {{translate 'lunch_info'}}
      </div>
    </div>
    {{#if specials}}
    <div class="right">
      <div class="special-links">
        {{#each specials}}
          <a href="#{{translate 'anchor' this}}">{{translate 'name' this}}</a>
        {{/each}}
      </div>
    </div>
    {{/if}}
  </div>

  {{#each specials}}
      <div class="lunch lunch-special">
        <hr />
        <a name="{{translate 'anchor' this}}"><h2>{{translate 'name' this}}</h2></a>
        {{translate 'lunch' this}}
      </div>
  {{/each}}

</div>